<div class="row">
    <div class="col-md-12">
        {{#unless categories}}
        <strong>{{message}}</strong>
        {{/unless}}
        <h2>Categories</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID </th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td>{{this.id}} </td>
                        <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
                    </tr>
                    {{/each}}
                </tbody> 
            </table>
        </div>


    </div>
</div>